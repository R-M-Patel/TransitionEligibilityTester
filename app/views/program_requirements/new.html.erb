<!DOCTYPE html>
<html>
    <body>
			<%= render 'layouts/header' %>
        <h1>New Program Requirements for <%= @program.name %></h1>
        
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <%= form_for @program_requirement, url: {action: "create"} do |f| %>
                    <%= f.label :max_income, "Max income (Percentage of federal poverty level)" %>
                    <%= f.number_field :max_income, class: 'form-control' %>
                    
                    <%= f.label :min_income, "Minimun income threshold, if applicable -- also as a percentage of federal poverty level" %>
                    <%= f.number_field :min_income, class: 'form-control' %>
                    
										<%= f.label :assets_threshold, "Total assets limit" %>
                    <%= f.number_field :assets_threshold, class: 'form-control' %>
										
                    <%= f.label :min_age, "Minimum age" %>
                    <%= f.number_field :min_age, class: 'form-control' %>
                    
										<%= f.label :max_age, "Maximum age" %>
                    <%= f.number_field :max_age, class: 'form-control' %>
                    
										Range of eligible zip codes
										
										<%= f.label :zip_code_range_start, "Range start point" %>
                    <%= f.text_field :zip_code_range_start, class: 'form-control' %>
										
										<%= f.label :zip_code_range_end, "Range end point" %>
                    <%= f.text_field :zip_code_range_end, class: 'form-control' %>
										
										<strong>Veteran Status Required</strong>
										</br>
										<%= radio_button_tag(:veteran, false) %>
										<%= label_tag(:veteran_false, "No") %>
										<%= radio_button_tag(:veteran, true) %>
										<%= label_tag(:veteran_true, "Yes") %>
										</br>
										
										<strong>Disability Required -- Patient has to have been collecting disability benefits for at least 2 years</strong>
										</br>
										<%= radio_button_tag(:disabled, false) %>
										<%= label_tag(:disabled_false, "No") %>
										<%= radio_button_tag(:disabled, true) %>
										<%= label_tag(:disabled_true, "Yes") %>
										</br>
										
                    <%= f.submit "Submit", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </body>
    
</html>
