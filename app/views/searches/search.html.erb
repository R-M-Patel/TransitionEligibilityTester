<!DOCTYPE html>
<html>
    
    <head>
        <title>Program Finder</title>
    </head>
    
    <body>
        <%= render 'layouts/header' %>
        </br>
        </br>
        
        <div class ="container">
            <div class ="center jumbotron">
                <h2>You are eligible for:</h2>
            </div>
        </div>
        
        <div class ="container">
            <div class="col-md-6 col-md-offset-3">
                <% if @programs.empty? %>
                    <h2>NOTHING</h2>
                <% else %>
									<% @programs.each do |p| %>
											<li><%= p.name %>, <a href=<%= p.link %>><%= p.abbreviation %></a></li>
									<% end %>
									<a href="#" onClick="window.print();return false;">Print Results</a>
                <% end %>
            </div>
        </div>
    </body>
    
</html>
