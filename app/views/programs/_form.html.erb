<%= form_for(program) do |f| %>
  <% if program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(program.errors.count, "error") %> prohibited this program from being saved:</h2>

      <ul>
      <% program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= stylesheet_link_tag "programs.scss" %>

  <div class="container form-inline">
    <div class="col-md-8 col-md-offset-4">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    
      <div class="field">
        <%= f.label :abbreviation %>
        <%= f.text_field :abbreviation, class: 'form-control' %>
      </div>
    	
    	<div class="field">
        <%= f.label :link %>
        <%= f.text_field :link, class: 'form-control' %>
      </div>
    	
    	<div class="field">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit %>
      </div>
      <%= link_to 'Back', programs_path %>
    </div>
    
  </div>
  
  
<% end %>
